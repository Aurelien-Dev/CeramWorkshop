
<MudForm>
    <MudDialog>
        <DialogContent>
            <MudText>@MaterialDetail.Name</MudText>
            <MudTextField Label="Quantité" Variant="Variant.Outlined" Class="mx-1" Adornment="Adornment.End" AdornmentText="gr"
                          @bind-Value="ProductMaterialDetail.Quantity" For="@(() => ProductMaterialDetail.Quantity)" />
            <MudTextField Label="Prix" Variant="Variant.Outlined" Class="mx-1" Adornment="Adornment.End" AdornmentText="€"
                          @bind-Value="ProductMaterialDetail.Cost" For="@(() => ProductMaterialDetail.Cost)" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" OnClick="OnValidSubmit">Ok</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>