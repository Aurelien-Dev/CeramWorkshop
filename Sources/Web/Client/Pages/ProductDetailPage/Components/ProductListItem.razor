@inherits Client.Utils.ComponentBase.CustomComponentBase

<MudItem xs="12" sm="6" md="4" lg="2">
    <MudCard>
        @if (string.IsNullOrEmpty(ProductListItemVm.Image))
        {
            <MudCardMedia Image="assets/img/bg-empty.png" Style="opacity:0.05" Height="200"/>
        }
        else
        {
            <MudCardMedia Image="@ProductListItemVm.Image" Height="200"/>
        }
        <MudCardContent>
            <MudText Typo="Typo.h6">#@ProductListItemVm.Reference - @ProductListItemVm.Name</MudText>
            <MudText>Status: @ProductListItemVm.Status</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" Href="@($"Product/{ProductListItemVm.Id}")">@Localizer["ProductList_ShowProduct"]</MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>