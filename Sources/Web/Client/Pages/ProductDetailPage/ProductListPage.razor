@page "/"
@using Client.Pages.ProductDetailPage.Components
@inherits Client.Utils.ComponentBase.CustomComponentBase

<MudPaper Elevation="0">
    <MudToolBar Dense="true" Class="mt-4" DisableGutters="true">
        <MudSelect T="OrderingPage" Label=@Localizer["OrderBy"] Margin="Margin.Dense" ValueChanged="@(RaiseOrdering)">
            @foreach (OrderingPage item in Enum.GetValues(typeof(OrderingPage)))
            {
                <MudSelectItem Value="@item">@item</MudSelectItem>
            }
        </MudSelect>

        <MudSpacer />

        <MudTextField ValueChanged="@(RaiseFilter)" T="string"
                      Clearable="true" KeyUpPreventDefault="true" Label="@Localizer["Search"]" Variant="Variant.Outlined" Adornment="Adornment.End" Margin="Margin.Dense"
                      AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Secondary" />
    </MudToolBar>
</MudPaper>
<MudGrid Class="mt-2">
    HELLO !!
    @foreach (var item in ProductsVm)
    {
        <ProductListItem ProductListItemVm="item"/>
    }
</MudGrid>