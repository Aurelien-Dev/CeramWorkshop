@page "/Firing"
@using Client.Utils.Extension

@inherits Client.Utils.ComponentBase.CustomComponentBase


<MudTable Class="mt-5" Items="@Firings" Dense="true" Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@Localizer["Title"]</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.Add" Color="Color.Inherit" OnClick="AddFiringDialog" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>@Localizer["TableHeader_Name"]</MudTh>
        <MudTh>@Localizer["Duration"]</MudTh>
        <MudTh>@Localizer["TotalKwH"]</MudTh>
        <MudTh>@Localizer["CostKwH"]</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="@Localizer["TableHeader_Name"]">@context.Name</MudTd>
        <MudTd DataLabel="@Localizer["Duration"]">@context.Duration</MudTd>
        <MudTd DataLabel="@Localizer["TotalKwH"]">@context.TotalKwH Kw/h</MudTd>
        <MudTd DataLabel="@Localizer["CostKwH"]">@context.CostKwH.ToStringMonetary(CurrentCultur, DecimalPrecision.Five)</MudTd>
        <MudTd>
            <MudStack Row="true">
                <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="async () => await EditFiringDialog(context)" />
                <MudFab Color="Color.Error" StartIcon="@Icons.Material.Filled.DeleteForever" Size="Size.Small" OnClick="async () => await DeleteFiringDialog(context)" />
            </MudStack>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>