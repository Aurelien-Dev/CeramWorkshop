@page "/Firing"

@using Client.Utils
@using Client.Utils.Extension
@using Domain.Models.MainDomain

@inherits CustomComponentBase


<MudTable Class="mt-5" Items="@Firings" Dense="true" Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@Title</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.Add" Color="Color.Inherit" OnClick="AddFiringDialog" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Nom</MudTh>
        <MudTh>Durée</MudTh>
        <MudTh>Total Kwh par cuisson</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nom">@context.Name</MudTd>
        <MudTd DataLabel="Duration">@context.Duration</MudTd>
        <MudTd DataLabel="TotalKwH">@context.TotalKwH Kw/h</MudTd>
        <MudTd DataLabel="">
            <MudStack Row=true>
                <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="async () => await EditFiringDialog(context)" />
                <MudFab Color="Color.Error" StartIcon="@Icons.Material.Filled.DeleteForever" Size="Size.Small" OnClick="async () => await DeleteFiringDialog(context)" />
            </MudStack>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>