@using Domain.Models.MainDomain

<MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
    <MudDialog>
        <DialogContent>

            <MudStack Row="true">
                <MudTextField Label="Nom" Variant="Variant.Outlined" Class="mx-1"
                              @bind-Value="FiringlDetail.Name" For="@(() => FiringlDetail.Name)" />
            </MudStack>

            <MudStack>
                <MudTextField Label="Durée" Variant="Variant.Outlined" Class="mx-1" Adornment="Adornment.End" AdornmentText="minutes"
                              @bind-Value="FiringlDetail.Duration" For="@(() => FiringlDetail.Duration)" />
            </MudStack>

            <MudStack>
                <MudTextField Label="Consommation" Variant="Variant.Outlined" Class="mx-1" Adornment="Adornment.End" AdornmentText="Kw/h"
                              @bind-Value="FiringlDetail.TotalKwH" For="@(() => FiringlDetail.TotalKwH)" />
            </MudStack>

            <MudStack>
                <MudTextField Label="Consommation" Variant="Variant.Outlined" Class="mx-1" Adornment="Adornment.End" AdornmentText="€ / Kw/h"
                              @bind-Value="FiringlDetail.CostKwH" For="@(() => FiringlDetail.CostKwH)" />
            </MudStack>

        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" OnClick="@(async () => await OnValidSubmit())">Ok</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>