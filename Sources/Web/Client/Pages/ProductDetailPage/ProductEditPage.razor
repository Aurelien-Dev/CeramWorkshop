@page "/Product/Edit/{id:int?}"
@page "/Product/Create"

@using Common.Helpers.RazorComponent
@using Common.Helpers.RazorComponent.CommonControls
@using Common.Helpers.RazorComponent.ProductControls

@inherits PageComponentBase


<EditForm Model="ProductDetail" OnSubmit="SaveProductEventHandler">
    <DataAnnotationsValidator />

    <div class="row">
        <div class="card">

            <div class="row no-gutters">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">#@ProductDetail.Reference - @ProductDetail.Name</h5>
                        <div class="row ms-2">
                            <ValidationSummary />
                        </div>
                        <div class="row">
                            <div class="col-12 col-sm-4">
                                <div class="form-floating mb-3">
                                    <InputTextArea id="Reference" @bind-Value="ProductDetail.Reference" class="form-control" />
                                    <label for="Reference">Référence</label>
                                </div>
                            </div>
                            <div class="col-12 col-sm-8">
                                <div class="form-floating mb-3">
                                    <InputText id="Name" @bind-Value=ProductDetail.Name class="form-control" />
                                    <label for="Name">Nom</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-sm-12">


                                <div class="form-floating mb-3">
                                    <InputTextArea id="Description" @bind-Value="ProductDetail.Description" class="form-control" style="height: 150px" />
                                    <label for="Description">Description</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <InputTextArea id="Description" @bind-Value="ProductDetail.DesignInstruction" class="form-control" style="height: 150px" />
                                    <label for="Description">Instruction de construction</label>
                                </div>

                                <div class="form-floating mb-3" style="padding:0 12px">
                                    <SizingEditor @bind-Height="ProductDetail.Height" @bind-DiameterTop="ProductDetail.TopDiameter" @bind-DiameterBot="ProductDetail.BottomDiameter" />
                                </div>

                                <div class="form-floating mb-3">
                                    <InputSelect id="floatingSelect" @bind-Value="ProductDetail.Status" class="form-select">
                                        <option value="1">Test</option>
                                        <option value="2">Abandoned</option>
                                        <option value="3">Production</option>
                                        <option value="4">Discontinued</option>
                                    </InputSelect>
                                    <label for="floatingSelect">Statut</label>
                                </div>

                                <div class="mb-3">
                                    <InputFile id="formFileSm" OnChange="@UploadFile" class="form-control form-control-sm" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 p-0">
                    @if (ProductDetail.ImageInstructions.Any())
                    {
                        <Carousel>
                            @for (var i = 0; i < ProductDetail.ImageInstructions.Count; i++)
                            {
                                <ImageCarousel Image="ProductDetail.ImageInstructions.ElementAt(i)" IsFirstElement="@(i==0)" />
                            }
                        </Carousel>
                    }
                </div>
                <div class="card-footer">
                    <button class="btn btn-outline-green" type="submit">
                        <i data-feather="edit-2" class="me-2"></i>
                        Enregistrer
                    </button>
                    <button type="button" class="btn btn-warning" @onclick="UndoCmd">
                        Annuler
                    </button>
                </div>
            </div>
        </div>
    </div>
</EditForm>
