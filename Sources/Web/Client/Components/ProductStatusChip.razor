@using Domain.Models.MainDomain

@if (Status != ProductStatus.None)
{
    <MudChip Color="@ChipColor" Size="Size.Small">@Status</MudChip>
}

@code {

    [Parameter]
    public ProductStatus Status { get; set; }

    private Color ChipColor { get; set; }

    protected override void OnParametersSet()
    {
        ChipColor = Status switch
        {
            ProductStatus.Abandoned => Color.Error,
            ProductStatus.Discontinued => Color.Warning,
            ProductStatus.None => Color.Dark,
            ProductStatus.Production => Color.Success,
            ProductStatus.Test => Color.Secondary,
            _ => ChipColor
        };
    }
}