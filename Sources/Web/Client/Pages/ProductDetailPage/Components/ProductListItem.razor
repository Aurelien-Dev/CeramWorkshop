@using Client.Components

@inherits Client.Utils.ComponentBase.CustomComponentBase

<MudItem xs="12" sm="6" md="4" lg="2">
    <MudCard Style="height:100%">
        <MudCardHeader>
            @if (string.IsNullOrEmpty(ProductListItemVm.Image))
            {
                <MudImage Src="assets/img/bg-empty.png" Style="opacity:0.05" Height="200" loading="lazy"/>
                //<MudCardMedia Image="assets/img/bg-empty.png" Style="opacity:0.05" Height="200" loading="lazy" />
            }
            else
            {
                <MudImage Src="@ProductListItemVm.Image" Height="200" loading="lazy" />
                //<MudCardMedia Image="@ProductListItemVm.Image" Height="200" loading="lazy" />
            }
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.h6">#@ProductListItemVm.Reference - @ProductListItemVm.Name</MudText>
            <ProductStatusChip Status="@ProductListItemVm.Status"/>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" Href="@($"Product/{ProductListItemVm.Id}")">@Localizer["ProductList_ShowProduct"]</MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>