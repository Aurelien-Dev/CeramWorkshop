@namespace Common.Helpers.RazorComponent.CommonControls

@if (Readonly.HasValue && Readonly.Value)
{
    <div class="form-floating mb-2">
        <textarea class="form-control" readonly placeholder="@Placeholder" id="@Label">@Value</textarea>
        <label for="@Label">@Label</label>
    </div>
}
else
{
    <div class="form-floating mb-2">
        <textarea class="form-control" placeholder="@Placeholder" id="@Label">@Value</textarea>
        <label for="@Label">@Label</label>
    </div>
}


@code {
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? Value { get; set; }
    [Parameter] public bool? Readonly { get; set; } = false;
}