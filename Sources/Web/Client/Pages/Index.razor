@page "/"
@using Component.CommonControls
@using Component.ProductControls


<div class="container">
    <div class="row">
        <div class="col-12">
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-7">
                    <Textbox Label="Name" Value="@ProductDetail.Name" Readonly=IsReadonly />
                    <Textarea Label="Description" Value="@ProductDetail.Description" Readonly=IsReadonly />
                    <Textarea Label="Instruction de construction" Value="@ProductDetail.DesignInstruction" Placeholder="test" Readonly=IsReadonly />

                    <button @onclick=ReadonlyCmd>readonly</button>
                </div>
                <div class="col-12 col-sm-5">
                    <CardCarousel />
                </div>
            </div>
        </div>
    </div>
</div>

