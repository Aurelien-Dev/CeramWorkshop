@page "/Product/{Id:int}"
@using Common.Helpers.RazorComponent.CommonControls
@using Common.Helpers


<div class="container">
    <div class="row">
        <div class="col-12">
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-7">
                    <Textbox Label="Name" Value="@ProductDetail?.Name" Readonly=IsReadonly />
                    <Textarea Label="Description" Value="@ProductDetail?.Description" Readonly=IsReadonly />
                    <Textarea Label="Instruction de construction" Value="@ProductDetail?.DesignInstruction" Placeholder="test" Readonly=IsReadonly />

                    <InputFile OnChange="@UploadFile" />

                    <button @onclick=ReadOnlyCmd>readonly</button>
                </div>
                <div class="col-12 col-sm-5">
                    @if (ProductImages.Any())
                    {
                        <CardCarousel CarouselItem=ProductImages />
                    }
                </div>
            </div>
        </div>
    </div>
</div>